<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/cover_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:riv_corner_radius="8dip"
        app:riv_oval="false"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/name_home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_size"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="12dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/description_home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_size"
        android:textColor="@color/colorPrice"
        app:layout_constraintTop_toBottomOf="@id/name_home_text"
        tools:layout_editor_absoluteX="121dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/price_home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_size"
        android:textColor="@color/colorPrice"
        app:layout_constraintTop_toBottomOf="@id/description_home_text"
        tools:layout_editor_absoluteX="121dp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/old_price_home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_size"
        app:layout_constraintTop_toBottomOf="@id/description_home_text"
        app:layout_constraintLeft_toRightOf="@id/price_home_text"
        android:layout_marginStart="10dp"
        tools:layout_editor_absoluteX="121dp"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>
